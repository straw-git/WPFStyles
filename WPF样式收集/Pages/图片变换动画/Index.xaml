<Page x:Class="WPF样式收集.Pages.图片变换动画.Index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF样式收集.Pages.图片变换动画"
       Height="600" Width="700" Unloaded="Page_Unloaded" Loaded="Page_Loaded"
      Title="Index">
    <Canvas Name="canMain"   Height="600" Width="400"  >
        <ComboBox Name="comboBox1" Margin="0,10,0,0" SelectedIndex="0" Canvas.Left="100" Width="100"  Height="25">
            <ComboBoxItem>Circle</ComboBoxItem>
            <ComboBoxItem>Block</ComboBoxItem>
            <ComboBoxItem>Radial</ComboBoxItem>
            <ComboBoxItem>Interlace</ComboBoxItem>
            <ComboBoxItem>WaterFall</ComboBoxItem>
        </ComboBox>
        <Button  Canvas.Left="210" Margin="0,10,0,0" Name="btnAnimate" Height="25" Width="80" Click="Button_Click">Animate</Button>
        <Image Stretch="Fill"   Margin="0,10,0,0" Canvas.Top="30"   Height="400" Width="400"  Name="image"/>
    </Canvas>
</Page>
