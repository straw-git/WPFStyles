<Page x:Class="WPF样式收集.Pages.背景动画.Index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF样式收集.Pages.背景动画"
     Height="600" Width="700" 
      Title="Index">
    <Grid>
        <Frame x:Name="bgFrame" Source="/Pages/Welcome.xaml"  NavigationUIVisibility="Hidden"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button Margin="20,0,0,0" Content="背景动画1" x:Name="btnBG1" Click="btnBG1_Click" Height="30" Width="80" />
            <Button Margin="20,0,0,0" Content="背景灯光效果" x:Name="btnBG2" Click="btnBG2_Click" Height="30" Width="100" />
            <Button Margin="20,0,0,0" Content="平面三角形3D运动效果" x:Name="btnBG3" Click="btnBG3_Click" Height="30" Width="140" />
            <Button Margin="20,0,0,0" Content="星空背景" x:Name="btnBG4" Click="btnBG4_Click" Height="30" Width="80" />
        </StackPanel>
    </Grid>
</Page>
